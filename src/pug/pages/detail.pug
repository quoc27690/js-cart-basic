          .detail__content__right
            img(src='./assets/images/detail-content-right.png')
            p RƯỢU
    .detail__related-products
      .wrapper
        .detail__related-products__container
          .detail__related-products__title
            +title-main('SẢN PHẨM LIÊN QUAN')
          .detail__related-products__slide
            input#detail-related-products-1(type='radio' name='detail-related-products', checked)
            input#detail-related-products-2(type='radio' name='detail-related-products')
            .index__slide__full-images--hidden
              .index__slide__full-images
                each item in indexSellingProduct
                  +product(item.link, item.title, item.price1, item.price2, item.corner)(style=`background-color: ${item.color}; color: ${item.color}`)
            .index__slide__arrow
              .index__slide__arrow--left
                label(for="detail-related-products-1")
                  i.fa.fa-arrow-left
              .index__slide__arrow--right
                label(for="detail-related-products-2")
                  i.fa.fa-arrow-right